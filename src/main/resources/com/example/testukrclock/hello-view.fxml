<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.testukrclock.HelloController">
   <center>
      <VBox alignment="CENTER" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      
          <Label fx:id="welcomeText" />
          <Button onAction="#onHelloButtonClick" text="Hello!" />
      </VBox>
   </center>
   <left>
      <VBox spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="questionText" text="For begin press [Start]">
               <font>
                  <Font size="35.0" />
               </font>
            </Label>
            <CheckBox fx:id="check1" mnemonicParsing="false" text="Відповідь 1" visible="false" />
            <CheckBox fx:id="check2" mnemonicParsing="false" text="Відповідь 2" visible="false" />
            <CheckBox fx:id="check3" mnemonicParsing="false" text="Тринадцята година двадцять п'ять хвилин" visible="false" />
            <Button fx:id="nextQuestion" mnemonicParsing="false" text="Старт" onAction="#onNextQuestion" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
